<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4A8A8">

    <!-- Botão Voltar -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="\u003c"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_alignParentStart="true"/>

    <!-- Barra de Pesquisa -->
    <EditText
        android:id="@+id/search_bar_recipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="58dp"
        android:hint="Pesquisar por uma receita da lista"
        android:padding="10dp"
        android:background="@drawable/search_background"
        android:layout_below="@id/btn_back" />

    <!-- Botão Gerar Receitas Aleatórias -->
    <Button
        android:id="@+id/btn_generate_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerar uma nova lista de receitas"
        android:backgroundTint="#FF6666"
        android:textColor="@android:color/white"
        android:layout_below="@id/search_bar_recipes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />



</RelativeLayout>
